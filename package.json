{
  "name": "node-ts-tmpl",
  "version": "1.0.0",
  "description": "Template project for TypeScript backed Nodejs",
  "author": "Paul Daniv",
  "license": "ISC",
  "main": "target/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build-min": "npm run build && npm run minify",
    "tsc:watch": "tsc -w --preserveWatchOutput",
    "watch": "tsnd --no-notify src/server.ts",
    "start": "ts-node src/server.ts",
    "watch:ts": "nodemon --inspect --watch src --ext 'ts,js' --exec npm start",
    "serve": "node target/server.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "lint": "tsc --noEmit && eslint '**/*.{js,ts}' --quiet --fix",
    "serve-debug": "nodemon --inspect --watch target --watch target/server.js",
    "watch:js": "concurrently -k -p '[{name}]' -n 'ts,js' -c 'cyan.bold,yellow.bold' 'npm run tsc:watch' 'npm run serve-debug'",
    "health-check": "scripts/healthcheck.sh",
    "genconf-sh": "scripts/genconf.sh",
    "genconf-js": "scripts/genconf.ts",
    "db:migrate": "sequelize db:migrate",
    "db:seed:all": "sequelize db:seed:all",
    "db:seed": "sequelize db:seed:all --seeders-path ./src/sequelize/dmp/seed",
    "db:init": "npm run genconf-js && sequelize db:migrate --migrations-path ./src/sequelize/dmp/migrate; npm run db:seed && npm run db:seed:all",
    "db:dump": "npm run db:migrate && scripts/create_local_db_dump.js",
    "db:recreate": "npm run genconf-js && npm run db:init",
    "minify": "scripts/minify.ts"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@types/body-parser": "^1.17.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.15.16",
    "@types/sequelize": "^4.28.9",
    "acorn": "^6.4.0",
    "body-parser": "^1.19.0",
    "chalk": "latest",
    "connect-busboy": "0.0.2",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "cron": "^1.7.2",
    "csurf": "^1.10.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6",
    "express-session": "^1.17.0",
    "express-ws": "^4.0.0",
    "fs-extra": "^9.0.1",
    "jwt-decode": "^2.2.0",
    "moment": "^2.24.0",
    "nodemailer": "^6.4.0",
    "pg": "^7.14.0",
    "request": "^2.88.2",
    "request-promise-native": "latest",
    "sequelize": "^5.21.12",
    "sequelize-cli": "^5.5.1",
    "sequelize-cli-typescript": "^3.2.0-c",
    "ssh2-sftp-client": "^4.3.0",
    "ws": "^7.2.0",
    "xlsx": "^0.14.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.11.8",
    "@types/uglify-js": "^3.9.2",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "concurrently": "^5.0.0",
    "eslint": "^7.10.0",
    "eslint-plugin-import": "^2.20.2",
    "nodemon": "^2.0.4",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.5",
    "uglify-js": "^3.9.4"
  }
}
